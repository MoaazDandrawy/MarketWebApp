@model IEnumerable<MarketWebApp.Models.Entity.OrderProduct>
@{
    ViewData["Title"] = "OrderInfo";
}

<section class="py-5 bg-light">
    <div class="container">
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-8 text-center">
                    <h1 class="display-4 text-primary mb-4">Order Information</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Product</th>
                                <th>Unit Price</th>
                                <th>Quantity</th>
                                <th>Total Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Product.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Quantity</td>
                                    <td>@(item.Price * item.Quantity)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-lg-12">
                <a href="@Url.Action( "OrderHistory","order")" class="btn btn-warning">Back </a>
            </div>
        </div>
    </div>
</section>