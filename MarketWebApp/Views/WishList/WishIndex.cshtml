@model dynamic;
<section class="breadcrumb-section set-bg" data-setbg=@Url.Content("~/img/breadcrumb.jpg")>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>WishList</h2>
                    <div class="breadcrumb__option">
                        <a href="~/home/index">Home</a>
                        <span>Shopping Cart</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@if (TempData["DeletedMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["DeletedMessage"]
    </div>
}

<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="featured__controls">
                    <div class="featured__controls">
                        <ul>
                            <li class="active" data-filter="*">WishList Products</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg=@Url.Content("~/img/product/" + item.Img)>
                            <ul class="featured__item__pic__hover">
                                <li>
                                    <a onclick="attachDeleteListeners()" class="delete-link" data-id="@item.ID"><i class="icon_close"></i></a>
                                 </li>
                                <li>
                                    <form onsubmit="return ADDCart(this);" method="post" asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-id="@item.ID">
                                        <button type="submit" style="border:none; background-color:transparent">
                                            <a><i class="fa fa-shopping-cart"></i></a>
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="#">@item.Name</a></h6>
                            <h5>@item.Price L.E</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
