@model MarketWebApp.Models.Entity.Category

@{
    ViewData["Title"] = "Delete Department";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
   // Layout = "~/Views/Shared/_Layout.cshtml";

}

@if (ViewBag.flag)
{

    <center>
        <div class="align-content-center">
            <div class="container">
                <div class="card" style="width: 350px;">
                    <img src="~/CantDelete.jpg" class="card-img-top" style="width: 200px; display: block; margin: 0 auto;" alt="...">
                    <div class="card-body">
                        <form asp-action="ConfirmDelete">
                            <input type="hidden" name="Id" value="@Model.ID"><hr>
                            <h3> You Can't Delete (@Model.Name) Because It Contain (@Model.Products.Count) Product </h3>
                            <br />
                            <div>
                                <a class="btn btn-outline-success rounded-3" asp-action="Index"> Back To All Departments </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </center>
}
else
{
    <center>
        <div class="align-content-center">
            <div class="container">
                <div class="card" style="width: 350px;">
                    <img src="~/1.jpg" class="card-img-top" style="width: 200px; display: block; margin: 0 auto;" alt="...">
                    <div class="card-body">
                        <form asp-action="ConfirmDelete">
                            <input type="hidden" name="Id" value="@Model.ID"><hr>
                            <h3> Are you want to delete this Department (@Model.Name) </h3>
                            <br />
                            <div>
                                <input type="submit" value="Delete" class="btn btn-outline-danger "  />
                                <a class="btn btn-secondary" asp-action="Index" asp-controller="Categories"> Cancel </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </center>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
