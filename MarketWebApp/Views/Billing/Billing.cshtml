@model MarketWebApp.ViewModel.BillingViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Billing Report</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        h1 {
            color: #333;
        }

        h2 {
            color: #666;
            margin-top: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Billing Report</h1>

    <h2>Customer Information</h2>
    <p>Customer Email: @Model.CustomerName</p>
    <p>Phone: @Model.Phone</p>

    <h2>Billing Details</h2>
    <table>
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Discount</th>
                <th>TotalWithDiscount</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.BillingDetails)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.Discount</td>
                    <td>@item.TotalWithDiscount</td>
                    <td>@item.Total</td>
                </tr>
            }
        </tbody>
    </table>

    <h2>Total Amount: @Model.TotalAmount</h2>
</body>
</html>
