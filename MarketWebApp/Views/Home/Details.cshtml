@model MarketWebApp.Models.Entity.Product

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg=@Url.Content("~/img/breadcrumb.jpg")>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>@Model.Category.Name Package</h2>
                    <div class="breadcrumb__option">
                        <a href="./index.html">Home</a>
                        <a href="./index.html">@Model.Category.Name</a>
                        <span>@Model.Name</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Product Details Section Begin -->
<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="product__details__pic">
                    <div class="product__details__pic__item">
                        <img class="product__details__pic__item--large"
                             src=@Url.Content("~/img/product/" + Model.Img) alt="">
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="product__details__text">
                    <h3>@Model.Name </h3>
                    <div class="product__details__price">@(Model.Price - (Model.Price * Model.Discount / 100)) L.E</div>
                    <p>
                        @Model.Detail
                    </p>
                    <div style="display:flex">
                        <form onsubmit="return ADDCart(this);" method="post" asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-id="@Model.ID">
                            <button type="submit" style="border:none; background-color:transparent">
                                <a class="primary-btn">ADD TO CARD</a>
                            </button>
                        </form>

                        <form onsubmit="return ADDWish(this);" asp-action="AddProductToWish" asp-controller="WishList" asp-route-id="@Model.ID">
                            <button type="submit" style="border:none; background-color:transparent">
                                <a class="heart-icon"><span class="icon_heart_alt"></span></a>
                            </button>
                        </form>
                    </div>
                    @*   <a href="#" class="primary-btn">ADD TO CARD</a>
                    <a href="#" class="heart-icon"><span class="icon_heart_alt"></span></a> *@
                    <ul>
                        <li><b>Availability</b> <span>In Stock</span></li>
                        <li><b>Price</b> <span>@Model.Price</span></li>
                        <li><b>Discount</b> <span>@Model.Discount %</span></li>
                        <li><b>Shipping</b> <span>01 day shipping. <samp>Free pickup today</samp></span></li>
                        <li><b>Unit</b> <span>@Model.Unit</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Product Details Section End -->
