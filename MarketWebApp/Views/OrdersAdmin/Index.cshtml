@model IEnumerable<MarketWebApp.Models.Entity.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container text-center">
    <h1>All Order</h1>
    <a asp-action="GenerateReport" class="btn btn-outline-primary col-2 m-1" role="button"> <i class="bi bi-plus-square"></i> Generate Report</a><br />

    <table class="table table table-hover table-striped">
        <thead class="table-primary">
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                @*      <th scope="col">
                @Html.DisplayNameFor(model => model.Price)
                </th> *@
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.State)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.applicationUser)
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Date.Date.Day/@item.Date.Date.Month/@item.Date.Date.Year
                    </td>

                    @* <td>
                @Html.DisplayFor(modelItem => item.Price)
                </td> *@
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.applicationUser.Email)
                    </td>
                    <td>
                        <div><a class="btn btn-outline-primary" asp-action="Details" asp-route-Id="@item.ID">Details</a></div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>